# RespiCare - Environment Variables Example
# Copy this file to .env and fill in your values

# ======================
# APPLICATION SETTINGS
# ======================
NODE_ENV=development
APP_NAME=RespiCare
APP_URL=http://localhost
PORT=3001

# ======================
# DATABASE CONFIGURATION
# ======================
# MongoDB
MONGO_USERNAME=admin
MONGO_PASSWORD=change_this_password
MONGO_DB=respicare
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGODB_URI=mongodb://admin:change_this_password@mongodb:27017/respicare?authSource=admin

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# ======================
# SECURITY
# ======================
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ======================
# AI SERVICES
# ======================
AI_SERVICE_URL=http://ai-services:8000
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_MODEL=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7

# ======================
# EMAIL CONFIGURATION
# ======================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@respicare.com

# ======================
# FRONTEND CONFIGURATION
# ======================
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001
REACT_APP_ENV=development

# ======================
# LOGGING
# ======================
LOG_LEVEL=info
LOG_FORMAT=json

# ======================
# MONITORING
# ======================
ENABLE_METRICS=true
METRICS_PORT=9090

