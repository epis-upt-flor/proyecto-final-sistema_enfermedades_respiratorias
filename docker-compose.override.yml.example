version: '3.8'

services:
  # Ejemplo: Agregar puerto de depuración para backend
  backend:
    ports:
      - "9229:9229"  # Node.js debugger
    environment:
      - NODE_OPTIONS=--inspect=0.0.0.0:9229
    
