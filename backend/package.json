{
  "name": "respicare-backend",
  "version": "1.0.0",
  "description": "Backend API para RespiCare Tacna - Sistema de GestiÃ³n de Enfermedades Respiratorias",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:clean": "node dist/index-clean.js",
    "dev": "nodemon src/index.ts",
    "dev:clean": "nodemon src/index-clean.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "seed": "ts-node src/scripts/seed.ts",
    "generate": "bash scripts/generate-code.sh",
    "generate:dtos": "ts-node src/generators/dto-generator.ts",
    "generate:repositories": "ts-node src/generators/repository-generator.ts",
    "generate:all": "npm run generate:dtos && npm run generate:repositories",
    "validate:models": "tsc --project tsconfig.validation.json --noEmit",
    "validate:openapi": "openapi-generator-cli validate -i openapi/respicare-api.yaml",
    "docs:generate": "typedoc --out docs/api src",
    "diagrams:generate": "java -jar tools/plantuml.jar ../docs/diagrams/*.puml -o ../docs/diagrams/output"
  },
  "keywords": [
    "medical",
    "respiratory",
    "api",
    "nodejs",
    "typescript",
    "mongodb"
  ],
  "author": "RespiCare Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.0",
    "morgan": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.14.0",
    "redis": "^4.6.10",
    "sharp": "^0.33.0",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/pdfkit": "^0.12.12",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
